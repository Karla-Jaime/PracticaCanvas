<Window x:Class="PracticaCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Canvas>
        <Button>Boton Uno</Button>
        <Button Canvas.Right="0" Canvas.Top="0">Boton Dos</Button>
        <Button Canvas.Bottom="0" Canvas.Left="0">Boton Tres</Button>
        <Button Canvas.Bottom="0" Canvas.Right="0">Boton Cuatro</Button>
        <Rectangle Fill="Azure" Height="450" Width="800" Panel.ZIndex="1"
                   ></Rectangle>
        <Rectangle Fill="Firebrick" Height="25" Width="50" Canvas.Left="10" Canvas.Top="40" Panel.ZIndex="3"
                   ></Rectangle> 

        <Rectangle Fill="Salmon" Height="25" Width="50" Canvas.Left="20" Canvas.Top="50" Panel.ZIndex="2"
                   ></Rectangle>
    </Canvas>
</Window>
